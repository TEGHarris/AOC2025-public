{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2024",
        "jsx": "react-jsx",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strict": true,
        "sourceMap": true,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": ["node"]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}